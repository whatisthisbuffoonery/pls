int	counting_too_hard(char *sep)
{
	int	i;

	i = 0;
	while (sep[i])
		i ++;
	return (i);
}

void	seperate(char *dest, char *sep, int *a)
{
	int	i;

	i = 0;
	while (sep[i])
	{
		dest[*a] = sep[i];
		*a += 1;
		i ++;
	}
}

char	*strpls(int size, char **strs, char *sep, int *a)
{
	int		b;
	char	*dest;
	int		k;
	int		i;

	k = 0;
	b = counting_too_hard(sep);
	dest = malloc(*a + (b * (size - 1)) + 1);
	*a = 0;
	while (k < size)
	{
		i = 0;
		while (strs[k][i])
		{
			dest[*a] = strs[k][i];
			i ++;
			*a += 1;
		}
		k ++;
		if (k < size)
			seperate(dest, sep, a);
	}
	return (dest);
}

char	*ft_strjoin(int size, char **strs, char *sep)
{
	int		i;
	int		k;
	int		a;
	char	*dest;

	a = 0;
	k = 0;
	if (size <= 0)
	{
		dest = malloc(1);
		dest[0] = '\0';
		return (dest);
	}
	while (k < size)
	{
		i = 0;
		while (strs[k][i])
			i ++;
		k ++;
		a += i;
	}
	dest = strpls(size, strs, sep, &a);
	dest[a] = '\0';
	return (dest);
}
