# Compiler and flags
CC = cc
CFLAGS = -Wall -Wextra -Werror

# Directories
SRC_DIR = srcs
INC_DIR = includes

# Source files
SRC = ft_putchar.c ft_swap.c ft_putstr.c ft_strlen.c ft_strcmp.c

# Object files: replace .c with .o and keep them in srcs/
OBJ = $(addprefix $(SRC_DIR)/,$(SRC:.c=.o))

# Library name at root
LIB = libft.a

# Header files (for dependency tracking, if needed)
HEADERS = $(INC_DIR)/ft.h

.PHONY: all clean fclean re

# Default target
all: $(LIB)

# Compile library
$(LIB): $(OBJ)
	@echo "Creating library $@"
	ar rcs $@ $^

# Compile .o files from .c, placing .o in srcs/
$(SRC_DIR)/%.o: $(SRC_DIR)/%.c $(HEADERS)
	@echo "Compiling $<"
	$(CC) $(CFLAGS) -I$(INC_DIR) -c $< -o $@

# Remove .o files
clean:
	@echo "Cleaning object files..."
	rm -f $(OBJ)

# Remove .o files and the library
fclean: clean
	@echo "Removing library $(LIB)..."
	rm -f $(LIB)

# Rebuild all
re: fclean all

